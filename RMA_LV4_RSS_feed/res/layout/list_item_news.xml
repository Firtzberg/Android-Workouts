<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/news_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/news_item_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF6600"
        android:layout_toRightOf="@id/news_item_image" />

    <TextView
        android:id="@+id/news_item_category"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_below="@id/news_item_title"
        android:layout_toRightOf="@id/news_item_image" />

    <TextView
        android:id="@+id/news_item_published"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/news_item_title"
        android:textColor="#bbb"
        android:gravity="right" />

    <TextView
        android:id="@+id/news_item_description"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/news_item_published"
        android:layout_toRightOf="@id/news_item_image" />

</RelativeLayout>